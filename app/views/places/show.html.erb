<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<div class="container">
<div class="row">
<% if @current_user%>
<% for post in @posts %>
  <div class="col-md-6 col-lg-3" >
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
<% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>

  </div>
<% end %>
</div>

<p>
 <button type="button" class="btn btn-success"><a href="/posts/new?place_id=<%= @place["id"] %>"class="link-light">New Post</a></button></p>

<p>
  <button type="button" class="btn btn-light">  <a href="/places">Back to All Places</a></button>
</p>
<% end %>
</div>